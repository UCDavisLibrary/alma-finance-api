<div class="l-container">
    <form
      id="fund-form"
      method="POST"
      action="/admin/edit-fund"
    >
      <fieldset>
        <h2>Fund Information</h2>
  
        <div class="field-container">
          <label class="text-muted form-label" for="id">ID</label>
          <%= fund.id %>
        </div>
  
        <div class="field-container">
          <label class="text-muted form-label" for="fundId">Fund ID</label>
          <input
            required
            placeholder="fund ID"
            type="text"
            id="fundId"
            class="form-control"
            name="fundId"
            value="<% if (editMode) { %><%= fund.fundId %><% } %>"
          />
        </div>
  
        <div class="field-container">
          <label class="text-muted form-label" for="fundCode">Fund Code</label>
          <input
            required
            placeholder="Fund Code"
            type="text"
            id="fundCode"
            class="form-control"
            name="fundCode"
            value="<% if (editMode) { %><%= fund.fundCode %><% } %>"
          />
        </div>
  
        <div class="field-container--small views-filters__submit-field">
          <button type="submit" class="btn--primary">
            Update
          </button>
        </div>
      </fieldset>
    </form>
  </div>
  